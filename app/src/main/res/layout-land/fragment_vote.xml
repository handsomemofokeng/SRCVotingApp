<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.vote.VoteFragment">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="President" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/section_label">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rgCandidate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/rbEFFSC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_edges_land"
                    android:layout_marginRight="@dimen/dimen_edges_land"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner"
                    android:drawableStart="@mipmap/ic_launcher_round"
                    android:drawableEnd="@mipmap/ic_effsc_round"
                    android:padding="15dp"
                    android:text="Candidate Comrade\nEFF" />

                <RadioButton
                    android:id="@+id/rbDASO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_edges_land"
                    android:layout_marginRight="@dimen/dimen_edges_land"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner"
                    android:drawableStart="@mipmap/ic_launcher_round"
                    android:drawableEnd="@mipmap/ic_daso_round"
                    android:padding="15dp"
                    android:text="Honorable Member\nDASO" />

                <RadioButton
                    android:id="@+id/rbSASCO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_edges_land"
                    android:layout_marginRight="@dimen/dimen_edges_land"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner"
                    android:drawableStart="@mipmap/ic_launcher_round"
                    android:drawableEnd="@mipmap/ic_sasco_round"
                    android:padding="15dp"
                    android:text="Jacob Ramaphosa\nSASCO" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>