<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/spinner"
    android:orientation="vertical"
    android:padding="@dimen/default_gap">

    <TextView
        android:id="@+id/tvCandidatePortfolioRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:padding="5dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        tools:text="President"
        android:drawableStart="@drawable/ic_assign_candidate"
        android:drawablePadding="5dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCandidatePicture"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="2"
            android:contentDescription="@string/action_show_insights" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvCandidateNameRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="@dimen/text_size"
                tools:text="Member Party"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="5dp"/>

            <TextView
                android:id="@+id/tvCandidateEmailRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="@dimen/text_size"
                tools:text="candidate@stud.cut.ac.za"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="5dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>